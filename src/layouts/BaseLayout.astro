---
import '../styles/global.css';
import FloatingCartButton from '../components/FloatingCartButton.astro';
import CartDrawer from '../components/CartDrawer.astro';
import cartScript from '../scripts/cart-ui.ts?url';

const { title = 'FT Calcos', description = 'Calcos personalizados para todos tus productos.' } = Astro.props;
const base = import.meta.env.BASE_URL || '/';
---
<!DOCTYPE html>
<html lang="es" data-base={base}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-slate-50 text-slate-900 flex flex-col">
    <header class="bg-white/90 backdrop-blur border-b border-slate-200 sticky top-0 z-40">
      <div class="max-w-6xl mx-auto px-4 py-4 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <a href={base} class="text-xl font-semibold tracking-tight text-primary">FT Calcos</a>
        <nav class="flex gap-4 text-sm font-medium">
          <a href={base} class="hover:text-accent">Catalogo</a>
          <a href={`${base}como-comprar`} class="hover:text-accent">Como comprar</a>
          <a href={`${base}carrito`} class="hover:text-accent">Carrito</a>
        </nav>
      </div>
    </header>
    <main class="flex-1 w-full max-w-6xl mx-auto px-4 py-10">
      <slot />
    </main>
    <footer class="bg-primary text-white text-sm">
      <div class="max-w-6xl mx-auto px-4 py-6 flex flex-col gap-2 sm:flex-row sm:items-center sm:justify-between">
        <p>&copy; {new Date().getFullYear()} FT Calcos. Todos los derechos reservados.</p>
        <p class="text-white/70">Hecho con Astro + Tailwind.</p>
      </div>
    </footer>
    <div class="fixed bottom-4 right-4 z-50 flex flex-col gap-3">
      <a
        href="https://instagram.com/tu-instagram"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-white shadow-lg border border-slate-200 rounded-full px-4 py-2 text-sm font-semibold text-primary hover:text-accent"
      >
        Instagram
      </a>
      <a
        href="https://wa.me/5491112345678"
        target="_blank"
        rel="noopener noreferrer"
        class="bg-accent text-white shadow-lg rounded-full px-4 py-2 text-sm font-semibold hover:bg-orange-500"
      >
        WhatsApp
      </a>
    </div>
    <FloatingCartButton />
    <CartDrawer />
    <script type="module" src={cartScript}></script>
  </body>
</html>
