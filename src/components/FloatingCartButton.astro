---
const base = import.meta.env.BASE_URL || '/';
---
<div class="fixed bottom-5 right-5 z-50 flex flex-col items-end gap-2">
  <a href={`${base}carrito`} class="text-xs uppercase tracking-[0.3em] text-slate-400">Ver carrito completo</a>
  <button
    type="button"
    class="floating-cart-btn inline-flex items-center gap-2 rounded-full bg-primary px-5 py-3 text-sm font-semibold text-white shadow-lg hover:bg-slate-900"
    data-cart-toggle="open"
    aria-label="Abrir carrito"
  >
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="h-5 w-5" fill="none" stroke="currentColor" stroke-width="1.6">
      <path d="M4 5H6L7.8 14.2C8.1 15.7 9.4 16.8 10.9 16.8H17.7C19 16.8 20.1 15.9 20.3 14.7L21.5 8.2C21.7 7 20.8 6 19.6 6H8" stroke-linecap="round" stroke-linejoin="round" />
      <circle cx="10" cy="20" r="1.2" />
      <circle cx="18" cy="20" r="1.2" />
    </svg>
    <span>Carrito</span>
    <span class="rounded-full bg-white/20 px-2 py-0.5 text-xs" data-floating-cart-count>0</span>
  </button>
</div>
